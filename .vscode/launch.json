{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API (Uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["src.main:app", "--reload"],
      "cwd": "apps/api",
      "console": "integratedTerminal"
    },
    {
      "name": "Web (Next.js)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "program": "${workspaceFolder}/apps/web/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "cwd": "apps/web"
    }
  ]
}